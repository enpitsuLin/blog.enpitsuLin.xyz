{
  "name": "enpitsulin.xyz",
  "version": "n/a",
  "private": true,
  "packageManager": "pnpm@7.15.0",
  "workspaces": [
    "apps",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:^1.0.0",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "lint-staged": "^13.0.4",
    "turbo": "^1.6.3"
  }
}
