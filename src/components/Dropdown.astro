---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<details class="group">
  <summary
    bg="hover:neutral-2 dark:hover:neutral-7"
    grid="~ auto-flow-col items-center gap-1"
    select-none
    cursor-pointer
    rounded
    px2
    py1
  >
    <span>{title}</span>
    <div
      i-ri:arrow-down-s-line
      text-5
      group-open:rotate-180
      transition-transform
      ease-in
    >
    </div>
  </summary>
  <div
    absolute
    mt-2
    rounded-lg
    w-30
    text-sm
    shadow="lg neutral-3 dark:neutral-8"
    bg="neutral-1 dark:neutral-6"
  >
    <slot />
  </div>
</details>
