---
interface Props extends astroHTML.JSX.TimeHTMLAttributes {
  date: Date;
}
const { date, ...timeProps } = Astro.props;
---

<time datetime={date.toISOString()} {...timeProps}>
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    })
  }
</time>
