<div class="fixed right-8 bottom-8">
  <button
    id="scroll-to-top"
    type="button"
    aria-label="Scroll to top"
    class:list={[
      'bg-neutral-200 text-neutral-700 hover:bg-neutral-300 dark:bg-neutral-700 dark:text-neutral-400 dark:hover:bg-neutral-600',
      'rounded-full p-1 transition-all op-0'
    ]}
  >
    <div class="i-ri:arrow-up-double-fill w-6 h-6"></div>
  </button>
</div>
<script>
  const scrollToTop = document.querySelector(
    '#scroll-to-top'
  ) as HTMLButtonElement;
  const onScroll = () => {
    if (window.scrollY > 50) {
      if (scrollToTop.classList.contains('op-0'))
        scrollToTop.classList.remove('op-0', 'pointer-events-none');
    } else scrollToTop.classList.add('op-0', 'pointer-events-none');
  };

  window.addEventListener('scroll', onScroll, { passive: true });
  scrollToTop.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>
