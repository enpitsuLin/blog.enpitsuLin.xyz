<div class="fixed right-8 bottom-8">
  <button
    id="scroll-to-top"
    type="button"
    aria-label="Scroll to top"
    class="rounded-full bg-neutral-200 p-1 text-neutral-700 transition-all hover:bg-neutral-300 dark:bg-neutral-700 dark:text-neutral-400 dark:hover:bg-neutral-600 p-1 hidden"
  >
    <div class="i-ri:arrow-up-double-fill w-6 h-6"></div>
  </button>
</div>
<script>
  const scrollToTop = document.querySelector(
    '#scroll-to-top'
  ) as HTMLButtonElement;
  const onScroll = () => {
    if (window.scrollY > 50) {
      if (scrollToTop.classList.contains('hidden'))
        scrollToTop.classList.remove('hidden');
    } else scrollToTop.classList.add('hidden');
  };

  window.addEventListener('scroll', onScroll, { passive: true });
  scrollToTop.addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>
