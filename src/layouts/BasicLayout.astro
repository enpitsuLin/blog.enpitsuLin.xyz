---
import Footer from '~/components/Footer.astro';
import '~/styles/base.css';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<html lang="zh-cmn-Hans" scroll-smooth>
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body
    c="black dark:white"
    bg="$e-bg"
    motion-safe="transition-all duration-200 ease-in"
  >
    <Header />
    <main pt-16 pb-8>
      <div max-w-76ch mx-auto px-4>
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>
