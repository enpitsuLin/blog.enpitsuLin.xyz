{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./"]
    }
  },
  "include": ["./src/**/*", "./src/__generated__/*"]
}
